<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="@dimen/heading">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_booking_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Id :"
            android:textColor="@color/black"
            android:textSize="@dimen/denim_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_toRightOf="@+id/text_booking_id"
            android:text="565655655"
            android:textColor="@color/black"
            android:textSize="@dimen/denim_20"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_left">

        <TextView
            android:id="@+id/text_cst_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name :"
            android:textColor="@color/black"
            android:textSize="@dimen/denim_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_custmer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_toRightOf="@+id/text_cst_name"
            android:text="565655655"
            android:textColor="@color/black"
            android:textSize="@dimen/denim_20"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_left">

        <TextView
            android:id="@+id/text_mob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile :"
            android:textColor="@color/black"
            android:textSize="@dimen/denim_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_toRightOf="@+id/text_mob"
            android:text="565655655"
            android:textColor="@color/black"
            android:textSize="@dimen/denim_20"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_left">

        <TextView
            android:id="@+id/text_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:textColor="@color/black"
            android:textSize="@dimen/denim_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_toRightOf="@+id/text_mail"
            android:text="565655655"
            android:textColor="@color/black"
            android:textSize="@dimen/denim_20"
            android:textStyle="bold" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_left"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:text="OTP :"
            android:textColor="@color/black"
            android:textSize="@dimen/denim_20"
            android:textStyle="bold" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:background="@drawable/edittext_shap" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ll_mar40"
        android:layout_marginTop="@dimen/denim_20"
        android:gravity="center"
        android:text="Resend Otp"
        android:textColor="@color/black"
        android:textSize="@dimen/denim_20" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/denim_20"
        android:background="@drawable/button_login"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="@dimen/denim_20" />


</LinearLayout>