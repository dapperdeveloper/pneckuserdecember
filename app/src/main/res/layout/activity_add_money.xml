<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".activity.registrationSecond.Activity.AddMoneyActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/top_view"
        android:visibility="gone"
        android:background="@color/black"
        android:alpha="0.4"
        android:orientation="vertical"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        android:background="@drawable/card_shadow"
        android:id="@+id/login_details_RL1_id">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/Goback"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_white_cross"
            android:tint="@color/black"
            android:padding="5dp"
            android:layout_margin="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_money"
                android:padding="3dp"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/choose_or_enter_amount"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="22dp"
                android:layout_margin="@dimen/editpad5dp"
                android:padding="@dimen/editpad5dp"
                android:layout_marginLeft="22dp">

                <ImageView
                    android:id="@+id/decreaseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic__remove_circle_"
                    android:tint="@color/colorPrimary"/>

                <LinearLayout
                    android:id="@+id/vv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/decreaseBtn"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/moneyTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="0.00"
                        android:gravity="center"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/myTextView"
                        android:background="@color/colorBlack"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/increaseBtn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/vv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_circle"
                    android:tint="@color/colorPrimary"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="3">


                <androidx.cardview.widget.CardView
                    android:id="@+id/hundredBtn"
                    android:layout_width="60dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="8dp"
                    android:padding="4dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="100"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/threeHundredBtn"
                    android:layout_width="60dp"
                    android:layout_toRightOf="@+id/hundredBtn"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="8dp"
                    android:padding="4dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="300"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/fiveHundredBtn"
                    android:layout_width="60dp"
                    android:layout_toRightOf="@+id/threeHundredBtn"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="8dp"
                    android:padding="4dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="500"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="15sp"/>
                </androidx.cardview.widget.CardView>



            </RelativeLayout>

            <Button
                android:id="@+id/addMoneyBtn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="@string/add"
                android:layout_margin="16dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                />


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>