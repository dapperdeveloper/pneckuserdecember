<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.registrationSecond.Activity.ProviderDetailActivity">

    <!--Toolbar-->
    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/rect01">

        <ImageButton
            android:id="@+id/Goback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white"
            android:background="@null"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Goback"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/nameTitle"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/lo"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_detail"
                android:textSize="16sp"

                android:fontFamily="@font/raleway_semibold"
                android:textColor="@color/white"
                />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/lo"
            android:layout_below="@+id/Goback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/editpad5dp"
            android:layout_marginBottom="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shopAvatarIv"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp"
                android:src="@drawable/abcdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:id="@+id/shopNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Store Name"
                    android:textSize="16sp"

                    android:fontFamily="@font/raleway_semibold"
                    android:layout_marginLeft="@dimen/editpad5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />

                <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.5"
                    android:layout_marginLeft="@dimen/editpad5dp"
                    android:layout_marginTop="@dimen/editpad5dp"
                    style="@style/Widget.AppCompat.RatingBar.Small"/>



            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_rec03"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="6dp"
        android:weightSum="3"
        android:layout_marginTop="-15dp">

        <TextView
            android:id="@+id/tabServiceTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="About"

            android:fontFamily="@font/raleway_semibold"
            android:background="@drawable/shape_rect04"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tabGalleryTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/gallery"

            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tabReviewsTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"

            android:fontFamily="@font/raleway_semibold"
            android:text="@string/reviews"
            android:textColor="@color/black"/>
    </LinearLayout>


    <!--Service-->
    <RelativeLayout
        android:layout_below="@+id/ll"
        android:id="@+id/serviceRl"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description-"

            android:fontFamily="@font/raleway_semibold"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/descriptionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"

            android:fontFamily="@font/raleway"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lore"
            android:layout_marginLeft="16dp"
            android:padding="3dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profession-"

            android:fontFamily="@font/raleway_semibold"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/professionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Bike Machanic"

            android:fontFamily="@font/raleway"
            android:layout_marginLeft="16dp"
            android:padding="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address-"

            android:fontFamily="@font/raleway_semibold"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/addressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:fontFamily="@font/raleway"
            android:text="Mandi Samiti Najibabad Bijnor Uttar Pradesh, Uttar Pradesh"
            android:layout_marginLeft="16dp"
            android:padding="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days-"

            android:fontFamily="@font/raleway_semibold"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/working_daysTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"

            android:fontFamily="@font/raleway"
            android:text="Sunday, Monday, Tuesday, Wednesday, Thursday, Friday and Saturday,"
            android:layout_marginLeft="16dp"
            android:padding="3dp"
            android:maxLines="2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opening Time-"
            android:textStyle="bold"

            android:fontFamily="@font/raleway_semibold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/openTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="13:33 pm"

            android:fontFamily="@font/raleway"
            android:layout_marginLeft="16dp"
            android:padding="3dp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Closing Time-"
            android:textStyle="bold"

            android:fontFamily="@font/raleway_semibold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/closingTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="22:33 pm"

            android:fontFamily="@font/raleway"
            android:layout_marginLeft="16dp"
            android:padding="3dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website-"

            android:fontFamily="@font/raleway_semibold"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/websiteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"

            android:fontFamily="@font/raleway"
            android:text="https//google.co.in"
            android:layout_marginLeft="16dp"
            android:padding="3dp"
            android:layout_marginBottom="@dimen/denim_20"
            />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>




    </RelativeLayout>

    <!--gallery-->
    <RelativeLayout
        android:id="@+id/galleryRl"
        android:layout_below="@+id/ll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/grid_view"
            android:numColumns="auto_fit"
            android:gravity="center"
            android:columnWidth="100dp"
            android:stretchMode="columnWidth"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
        </GridView>

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="gallery"
            android:layout_centerInParent="true"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <!--Review-->
    <RelativeLayout
        android:id="@+id/reviewRl"
        android:layout_below="@+id/ll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviewRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:reverseLayout="true"
            app:stackFromEnd="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </RelativeLayout>

</RelativeLayout>