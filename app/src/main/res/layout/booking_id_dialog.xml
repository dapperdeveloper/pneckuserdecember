<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/rectangle_radial_background"
    android:orientation="vertical"
    android:padding="@dimen/heading">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="PLACING AN ORDER"
        android:textColor="@color/black"
        android:textSize="@dimen/denim_20"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/pb"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/custom_rounded_progress_bar"
        android:indeterminate="false"
        android:layout_height="6dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="@dimen/textsize_15"
        android:layout_width="match_parent"
        android:progress="22"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            card_view:srcCompat="@drawable/ic_location"
            android:tint="@color/grey_800"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".36"
            android:gravity="center_vertical"
            android:text="Location"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/denim_20"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="110dp"
        android:layout_height="3dp"
        android:layout_marginTop="@dimen/editpad5dp"
        android:background="@color/grey_600"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/user_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/editpad5dp"
        android:text="This is user complete address"
        android:textColor="@color/grey_600"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey_500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            card_view:srcCompat="@drawable/ic_booking_box"
            android:tint="@color/grey_800"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".36"
            android:gravity="center_vertical"
            android:text="Booking Id"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/denim_20"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="130dp"
        android:layout_height="3dp"
        android:layout_marginTop="@dimen/editpad5dp"
        android:background="@color/grey_600"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/user_book_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="56565"
        android:textColor="@color/grey_800"
        android:textSize="16sp" />


<!--

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/denim_20"
        android:gravity="center"
        android:text="Order in progress"
        android:textColor="@color/black"
        android:textSize="@dimen/denim_20" />
-->

    <TextView
        android:id="@+id/btn_book_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CANCEL_ORDER"
        android:visibility="gone"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/grey_200"
        android:textColor="@color/warning_color"
        android:textStyle="bold"/>
