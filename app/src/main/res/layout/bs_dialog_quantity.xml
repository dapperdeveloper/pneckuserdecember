<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect01">

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
       android:id="@+id/productIv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_cart_grey"/>
    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/productIv"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textSize="18sp"
        android:text="Product Title"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/pCategoryTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titleTv"
        android:text="Category"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/descriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pCategoryTv"
        android:text="Product description"
        android:layout_marginTop="5dp"
        android:maxLines="3"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/discountNoteTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:text="10% OFF"
        android:padding="5dp"
        android:textColor="@color/colorGreen"
        android:textSize="10sp"
        android:background="@drawable/shape_rect05"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:id="@+id/originalPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"
            android:text="Rs.50"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/finalPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"
            android:text="Final Price"
            android:layout_alignParentEnd="true"
            android:textAlignment="textStart"
            android:textColor="@color/colorBlack"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <ImageButton
            android:id="@+id/decrementBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_remove_circle_black"/>
        <TextView
            android:id="@+id/quantityTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:textSize="22sp"
            />
        <ImageButton
            android:id="@+id/incrementBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add_circle_black"/>
    </LinearLayout>
    <Button
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:text="Add To Cart"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"/>

</LinearLayout>